<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nrt2281999.databasequizapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TopicVideoActivity"
            android:label="@string/title_activity_topic_list" />
        <activity
            android:name=".YouTubeActivity"
            android:exported="true"
            android:label="@string/title_activity_you_tube" />
        <activity
            android:name=".QuizSelection"
            android:exported="true"
            android:label="@string/title_activity_quiz_selection" />
        <activity
            android:name=".SQLiteQuiz"
            android:label="@string/title_activity_topic1_quiz" />
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu"></activity>
    </application>

</manifest>